<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="css/style.css">

  <!-- Bootstrap CSS -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

  <title><img src="images/My_project-removebg-preview (1).png" alt=""></title>
 
</head>

<body>
 
    <h4 class="head">Get your vote to best</h4>
    <div class="gap">
    <table style="width:100%">
      <div class="container">
      <tr class="row">
        <th class="left col-2">candidate name</th>
        <th class="center col-2">partyname</th>
        <th class="center col-4">year</th>
        <th class="center col-2">branch</th>
        <th class="center col-2">vote </th>

      </tr>
    </div>
    <hr>
   


    <% candiditems.forEach(function(item) {%>
      <form  action="/incrvote" method="post" >
    <tr class="row">
        <td  class="left col-2"><%=item.name%></td>
        <td class="center col-2"><%=item.party%></td>
        <td class="center col-4"><%=item.year%></td>
        <td class="center col-2"><%=item.branch%></td>
        <td class="center col-2">  <input type="checkbox" name="checkbox" value = "<%=item._id%>" onchange="this.form.submit()"></td>
      </form>
        <%  }) %>
      </tr>
      </form>

      
    

   
    </table>

  </div>
</div>



  </footer>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>

</html>